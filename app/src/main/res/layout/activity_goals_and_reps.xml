<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matt2929.strokeappdec2017.Activity.GoalsAndRepsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="10">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:gravity="center"
            android:text="Activity Selected"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/workoutSelectionView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:layout_weight=".7"
            android:background="@color/colorMaroon"
            android:gravity="center"
            android:text="Vertical Bowl"
            android:textAlignment="center"
            android:textColor="@color/colorBackground"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:gravity="center"
            android:text="Activity Hand"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/handSelectionTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:layout_weight=".7"
            android:background="@color/colorMaroon"
            android:gravity="center"
            android:text="Right"
            android:textAlignment="center"
            android:textColor="@color/colorBackground"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".75" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            android:text="How many repetitions would you like to do in this set?"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:visibility="invisible">

            <Button
                android:id="@+id/GoalAndRepMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_grey"
                android:text="-"
                android:textSize="40sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/GoalAndRepNumberText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="50sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:text="00" />

            <Button
                android:id="@+id/GoalAndRepPlus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_grey"
                android:text="+"
                android:textSize="40sp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_grey"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/home" />


            <Button
                android:id="@+id/continueButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_dkblue"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="@color/colorBackground"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
